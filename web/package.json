{
    "name": "@polymedia/journey-web",
    "author": "@juzybits (https://polymedia.app)",
    "private": true,
    "dependencies": {
        "@mysten/sui.js": "latest",
        "@mysten/wallet-kit": "latest",
        "@mysten/wallet-kit-core": "latest",
        "@polymedia/profile-sdk": "latest",
        "@polymedia/react-components": "latest",
        "@polymedia/webutils": "latest",
        "react": "^18.2.0",
        "react-dom": "^18.2.0"
    },
    "devDependencies": {
        "@parcel/transformer-less": "latest",
        "@types/react": "^18.2.25",
        "@types/react-dom": "^18.2.11",
        "@typescript-eslint/eslint-plugin": "^6.7.4",
        "@typescript-eslint/parser": "^6.7.4",
        "buffer": "^5.7.1",
        "eslint": "^8.51.0",
        "eslint-plugin-deprecation": "^1.5.0",
        "events": "^3.3.0",
        "parcel": "latest",
        "process": "latest",
        "react-devtools": "latest"
    },
    "scripts": {
        "lint": "eslint ./src --ext .ts,.tsx",
        "serve": "rm -rf .parcel-cache/ dist/ && parcel src/index.html",
        "build": "rm -rf .parcel-cache/ dist/ && parcel build --no-source-maps src/index.html && cp src/static/* dist/ && cp src/img/card_* dist/img/",
        "deploy-prod": "pnpm build && wrangler pages publish dist/ --project-name polymedia-journey --branch main"
    }
}
